---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout
  title={`${entry.data.title} | Probst Excavating Blog`}
  description={entry.data.description}
  image={entry.data.heroImage}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Back to Blog -->
    <a 
      href="/#blog" 
      class="inline-flex items-center text-blue-600 hover:text-blue-700 mb-8"
    >
      ‚Üê Back to Home
    </a>

    <!-- Hero Image -->
    {entry.data.heroImage && (
      <img 
        src={entry.data.heroImage} 
        alt={entry.data.title}
        class="w-full h-64 md:h-96 object-cover rounded-lg mb-8 bg-gray-200"
      />
    )}

    <!-- Article Header -->
    <header class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {entry.data.title}
      </h1>
      
      <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-4">
        <time>
          {entry.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {entry.data.author && (
          <>
            <span>‚Ä¢</span>
            <span>By {entry.data.author}</span>
          </>
        )}
        {entry.data.location && (
          <>
            <span>‚Ä¢</span>
            <span>üìç {entry.data.location}</span>
          </>
        )}
      </div>

      {entry.data.tags && entry.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {entry.data.tags.map((tag) => (
            <span class="text-sm bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Article Content -->
    <div class="prose prose-lg prose-blue max-w-none">
      <Content />
    </div>

    <!-- Call to Action -->
    <div class="mt-12 p-8 bg-blue-50 rounded-lg text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">
        Need Excavation Services?
      </h3>
      <p class="text-gray-700 mb-6">
        Contact Probst Excavating today for a free estimate on your project in Aurora, Lawrenceburg, or the Tri-State area.
      </p>
      <a 
        href="https://www.facebook.com/probstexcavating/" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
      >
        Get in Touch
      </a>
    </div>
  </article>

  <footer class="bg-gray-900 text-white mt-16 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">
        ¬© {new Date().getFullYear()} Probst Excavating Services. All rights reserved.
      </p>
    </div>
  </footer>
</BaseLayout>
